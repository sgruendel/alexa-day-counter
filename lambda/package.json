{
  "name": "alexa-day-counter",
  "version": "2.1.1",
  "description": "Alexa Skill for persistent counting of events per day",
  "main": "index.js",
  "scripts": {
    "reinstall": "rm -rf ./node_modules && npm install",
    "test": "nyc --reporter=lcov --reporter=text mocha --timeout 5000"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sgruendel/alexa-day-counter.git"
  },
  "author": "Stefan Gr√ºndel",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/sgruendel/alexa-day-counter/issues"
  },
  "homepage": "https://github.com/sgruendel/alexa-day-counter#readme",
  "dependencies": {
    "ask-sdk-core": "2.12.1",
    "ask-sdk-model": "1.39.0",
    "dynamoose": "2.8.8",
    "i18next": "21.10.0",
    "i18next-sprintf-postprocessor": "0.2.2",
    "moment-timezone": "0.5.38",
    "winston": "3.8.2"
  },
  "devDependencies": {
    "alexa-skill-test-framework": "1.2.4",
    "chai": "4.3.4",
    "eslint": "8.5.0",
    "eslint-config-strongloop": "2.1.0",
    "mocha": "9.1.3",
    "nyc": "15.1.0"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "extends": "strongloop",
    "env": {
      "commonjs": true,
      "es6": true,
      "node": true,
      "mocha": true
    },
    "rules": {
      "indent": [
        "error",
        4
      ],
      "max-len": [
        "error",
        120,
        4,
        {
          "ignoreComments": true,
          "ignoreUrls": true,
          "ignoreStrings": true,
          "ignorePattern": "^\\s*var\\s.+=\\s*(require\\s*\\()|(/)"
        }
      ]
    }
  }
}
