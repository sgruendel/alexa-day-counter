{
    "name": "alexa-day-counter",
    "version": "2.3.0",
    "description": "Alexa Skill for persistent counting of events per day",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "reinstall": "rm -rf ./node_modules && npm install",
        "test": "c8 --reporter=lcov --reporter=text mocha --timeout 5000 --exclude 'test/alexa-skill-test.cjs'"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/sgruendel/alexa-day-counter.git"
    },
    "author": "Stefan Gr√ºndel",
    "license": "GPL-3.0",
    "bugs": {
        "url": "https://github.com/sgruendel/alexa-day-counter/issues"
    },
    "homepage": "https://github.com/sgruendel/alexa-day-counter#readme",
    "dependencies": {
        "ask-sdk-core": "^2.14.0",
        "ask-sdk-model": "^1.86.0",
        "dynamoose": "^4.1.5",
        "i18next": "^25.8.1",
        "i18next-sprintf-postprocessor": "^0.2.2",
        "moment-timezone": "^0.6.0",
        "winston": "^3.19.0"
    },
    "devDependencies": {
        "@types/chai": "^5.2.3",
        "@types/mocha": "^10.0.9",
        "@types/node": "^25.2.0",
        "alexa-skill-test-framework": "^1.2.4",
        "c8": "^10.1.3",
        "chai": "^6.2.2",
        "eslint": "^9.39.2",
        "eslint-config-strongloop": "^2.1.0",
        "mocha": "^11.7.5"
    },
    "eslintConfig": {
        "parserOptions": {
            "ecmaVersion": 2023,
            "sourceType": "module"
        },
        "extends": "strongloop",
        "env": {
            "es6": true,
            "node": true,
            "mocha": true
        },
        "rules": {
            "indent": [
                "error",
                4
            ],
            "max-len": [
                "error",
                120,
                4,
                {
                    "ignoreComments": true,
                    "ignoreUrls": true,
                    "ignoreStrings": true,
                    "ignorePattern": "^\\s*var\\s.+=\\s*(require\\s*\\()|(/)"
                }
            ],
            "space-before-function-paren": 0
        }
    }
}
